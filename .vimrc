set background=dark
colorscheme gruvbox

set noerrorbells " No error bell sounds (this and the next 4 lines)
set novisualbell
set t_vb=
set tm=500

set number " Show line numbers
syntax on " Enable syntax highlighting
set cursorline " Highlight the line the cursor is currently on
set wildmenu " Visual autocomplete menu
set lazyredraw " Don't redraw when executing macros
set showmatch " Highlight matching braces, parentheses etc
set ai " Auto indent
set si " Smart indent

set tabstop=4 " How many spaces should vim use to display tab characters
set softtabstop=4 " Number of spaces to insert when hitting tab in edit mode
set shiftwidth=4
set expandtab " Insert spaces instead of a tab when pressing tab
set backspace=eol,start,indent " Fix backspace

set ignorecase " Case insensitive searching

set encoding=utf8 " Default encoding


